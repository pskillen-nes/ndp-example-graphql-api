{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2021"
    ],
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDirs": [
      "src"
    ],
    "types": [
      "node"
    ],
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  }
}
